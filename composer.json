{
    "name": "yulia633/api-slim-example",
    "description": "API project",
    "keywords": ["framework", "slim", "learning"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "slim/slim": "^4.7",
        "slim/psr7": "^1.4",
        "slim/http": "^1.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8.0 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpunit": "phpunit"
    }
}
